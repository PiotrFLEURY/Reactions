<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8sp"
    android:layout_margin="4sp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:padding="4sp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/bluegrey500">

            <ImageView
                android:id="@+id/rule_event_icon"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_margin="8sp"
                android:src="@drawable/ic_brightness"/>

            <TextView
                android:id="@+id/rule_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="@string/PositionEventName"/>


        </LinearLayout>

        <TextView
            android:paddingLeft="16sp"
            android:id="@+id/rule_event_parameter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="65 rue pierre joseph lemer\n59199 Hergnies\nFrance ~50 km"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16sp"
            android:background="@color/grey100">

            <ImageView
                android:id="@+id/rule_reaction_icon"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_margin="4sp"
                android:tint="@color/bluegrey500"
                android:src="@drawable/ic_vibrate"/>

            <TextView
                android:id="@+id/rule_reaction_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="@string/SetWallpaperReactionName"/>

            <TextView
                android:id="@+id/tv_reaction_extra"
                android:layout_margin="8sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="0612345678"
                android:textSize="12sp"
                android:background="@color/grey100"/>

            <ImageView
                android:id="@+id/rule_reaction_image"
                android:layout_gravity="center"
                android:layout_margin="8sp"
                android:layout_width="match_parent"
                android:layout_height="128sp"
                android:background="@color/grey100"
                tools:src="@android:drawable/ic_menu_report_image"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
