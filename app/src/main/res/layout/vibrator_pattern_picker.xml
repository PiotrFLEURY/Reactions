<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400sp">

    <ImageView
        android:id="@+id/vibrator_picker_ring"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="64sp"
        android:src="@drawable/vibrator_pattern_picker_indicator"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vibrator_picker_reset"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="48sp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"/>

        <ImageView
            android:id="@+id/vibrator_picker_test"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="48sp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_musique"/>

        <ImageView
            android:id="@+id/vibrator_picker_accept"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="48sp"
            android:src="@drawable/ic_accept"/>

    </LinearLayout>

    <TextView
        android:id="@+id/vibrator_picker_debug"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        tools:text="200;300;450"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>